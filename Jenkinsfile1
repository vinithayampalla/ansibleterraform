pipeline {
    agent any

    environment {
        SNS_TOPIC_ARN = 'arn:aws:sns:us-east-1:730335321612:mytopic'
    }

    triggers {
        cron('*/1 * * * *') // every 1 minutes
    }

    stages {
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    def exitCode = sh(script: 'terraform plan -detailed-exitcode -out=tfplan', returnStatus: true)

                    if (exitCode == 2) {
                        echo "⚠️ Drift detected!"
                        sh '''
                        aws sns publish \
                          --topic-arn "$SNS_TOPIC_ARN" \
                          --message "Terraform detected infrastructure drift." \
                          --subject "Terraform Drift Alert"
                        '''
                    } else if (exitCode == 0) {
                        echo "✅ No drift detected."
                    } else {
                        error("❌ Terraform plan failed.")
                    }
                }
            }
        }
    }
}
